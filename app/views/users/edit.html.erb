<div class="row m-auto">
  <div class="col-md-6 mt-5">
    <h3>プロフィール編集</h2>
    <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
      <h4 class="mt-4">ユーザーアイコン用画像</h3>
      <h4 class="mt-3">※設定中の画像</h4>
        <div class="mt-2"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg' %></div>
      <div class="mt-3"><%= f.attachment_field :profile_image, class:'btn btn-secondary' %></div>
      <h4 class="mt-4">ユーザーネーム</h2>
      <%= f.text_field :name, class:'form-control' %>
      <div class="col-md-4 ml-auto mt-5"><%= f.submit '変更を保存する', class:'btn btn-secondary' %></div>
    <% end %>
  </div>
</div>