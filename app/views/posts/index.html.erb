<h3>投稿一覧</h3>

<div>
  <% @post.each do |pos| %>
    <h4>
      <%= link_to user_path(pos.user.id) do %>
      <%= attachment_image_tag pos.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:'rounded-circle' %>
      <%= pos.user.name %>
      <% end %>
    </h4>
    <!--投稿した画像と文章までの範囲をリンク化、投稿詳細ページへ繋げる-->
    <%= link_to post_path(pos.id) do %>
      <p><%= attachment_image_tag pos, :image, :fill, 400, 400, format: 'jpeg' %></p>
      <p><%= pos.sentence %></p>
    <% end %>
    <!--  -->
  <% end %>
  <%= paginate @post %>
</div>